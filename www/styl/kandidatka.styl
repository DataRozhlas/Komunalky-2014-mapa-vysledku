.ig
  &.kandidatka-active .kandidatka-wrap
    left 0px !important

  .kandidatka-wrap
    position absolute
    top 0px
    left -100%
    width 100%
    bottom 0px
    transition left 0.6s
    z-index 3000
    .kandidatka
      width 100%
      height 100%
      overflow auto
      background white
      a.closebtn
        position absolute
        top 18px
        left 18px
        width 40px
        height 40px
        border 3px solid ColorHeadingLink
        border-radius 50%
        background white
        overflow hidden
        svg
          position absolute
          top -2px
          left -2px
          width @width
          height @height
          path
            fill ColorHeadingLink
        &:hover
          background lighten(ColorHeadingLink, 90%)
          cursor pointer
        &:active
          background ColorHeadingLink
          svg
            path
              fill white
      h1
        font-size 1.8em
        color ColorHeadingLink
        margin 0px
        padding 20px 15px 0px 91px
      h2
        font-size 1em
        font-weight normal
        font-style italic
        color #333
        margin 0px
        padding 10px 15px 19px 91px
      table.data-table
        border-collapse collapse
        width 100%
        td
        th
          margin 0px
        td
          padding 2px 5px
        th
          background ColorRadiozurnal
          border-bottom 1px solid darken(ColorRadiozurnal, 20%)
          color white
          padding 5px 5px
          text-align left
          .name
            text-decoration underline
            &:hover
              text-decoration none
              cursor pointer
        td:nth-child(4)
        th:nth-child(4)
          height 42px
        tbody
          tr
            td
              text-overflow ellipsis
              position relative
              &:nth-child(5)
              &:nth-child(6)
                padding-left 30px
            &:nth-child(2n) td
              background #f2f2f2
            .kost
            .mandat
              display block
              position absolute
              width 100%
              width 20px
              height 20px
              border-radius 3px
              top 50%
              margin-top -10px
            .mandat
              border 1px solid #aaa
              left 10px
              background white
              &.mandat-1
                border-color darken(ColorRadiozurnal, 50%)
                background ColorRadiozurnal
            .mandat-text
              position absolute
              left 38px
              top 12px
              font-variant small-caps
            .kost
              left 0px






